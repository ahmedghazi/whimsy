extends ../layout-security



prepend content
    .container
        div.row
            .col-md-6
                h2 Connection
                hr
                
                if errors
                    //p.text-danger #{errors}
                    - errors.forEach(function(error){
                        p.text-danger #{error}
                    - });
                form(action="/security/login", method="POST" class="" role="form")
                    div.form-group
                        label(for="username")
                        input.form-control(type="text", name="username", id="username", placeholder="Email", value="admin")
                    div.form-group
                        label(for="password")
                        input.form-control(type="password", name="password", id="password", placeholder="Password" value="pass")
                    div.form-group
                        button.btn.btn-lg.btn-primary Connection
            
            
        .sep60