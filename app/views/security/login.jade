extends ../layout-security



prepend content
    section
        article
            div.row
                .col-md-4.col-md-offset-4
                    h2.mrrn= title
                    hr
                    
                    if errors
                        //p.text-danger #{errors}
                        - errors.forEach(function(error){
                            p.text-danger #{error}
                        - });
                    form(action="/security/login", method="POST" class="form-signin" role="form")
                        div.form-group
                            label(for="username")
                            input.form-control(type="text", name="username", id="username", placeholder="User name", value="admin")
                        div.form-group
                            label(for="password")
                            input.form-control(type="password", name="password", id="password", placeholder="Password" value="pass")
                        div.form-group
                            button.btn.btn-lg.btn-primary Login

            .sep60