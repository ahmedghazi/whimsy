extends ../layout

block header
    include ../inc/admin-nav
    
prepend content

    section.submit
        //pre #{user}
        
        form(name="submit", action="/admin/users/edit/#{user._id}", method="POST")
            
            h3= title 
        
            
            div.form-group
                label(for="last_name") Nom
                input(type="text", class="form-control", name="name" placeholder="" value="#{user.name}")

            div.form-group
                label(for="email") E-mail
                input(type="email", class="form-control", name="email" placeholder="" value="#{user.email}")
            
            div.form-group
                label(for="last_name") Password
                input(type="text", class="form-control", name="password" placeholder="" value="#{user.password}")

            div.form-group
                label(for="post_status") Type d'utilisateur
                select(name="user_type", class="form-control")
                    option(value="admin" selected=user.user_type=="admin") Administrateur
                    option(value="invite" selected=user.user_type=="invite") Invit√©

            div.form-group
                input(type="submit", class="btn btn-lg btn-primary btn-block", value="Submit")

        
        
            